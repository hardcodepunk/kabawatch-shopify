<section id="index__shop" class="shop wrapper">
  <div id="product-container" class="shop__list">
    {% for product in collections['all'].products %}
      <a href="{{ product.url | within: collection }}" class="shop__list__item">
        <div class="shop__list__item__visual" style="background: center no-repeat url({{ product.featured_image.src | img_url: 'large' }}); background-size: cover;"></div>
        <div class="shop__list__item__text">
          {% unless product.available %}
            <p class="shop__list__item__text__status">Sold out</p>
          {% endunless %}
          <h2>{{ product.title }}</h2>
          <h3>{{ product.vendor }}</h3>
          <h4>{{ product.price | money }}</h4>
          <p>{{ product.metafields.global.description_tag }}</p>
        </div>
      </a>
    {% endfor %}
  </div>
</section>
<!-- footer -->
<footer class="footer wrapper">
  <a href="{{ shop.url }}" class="footer__logo">
    <img class="site-navigation__logo__img" src="{{ 'logo.svg' | asset_url }}"/>
  </a>
</footer>
