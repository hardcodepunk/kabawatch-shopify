{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}
<section class="shop-item wrapper">
  <form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm">
    <div class="shop-item__meta">
      <div class="shop-item__text">
        <h2 class="shop-item__text__name">{{ product.title }}</h2>
        <h3 class="shop-item__text__brand">$wag merk</h3>
        <h4 class="shop-item__text__price">{{ current_variant.price | money }}</h4>
      </div>
      <div class="shop-item__visual">
        <img id="slider-projection" class="shop-item__visual__img" src="{{ product.featured_image.src | img_url: 'large' }}" alt="{{ image.alt | escape }}"/>
      </div>
      <ul class="shop-item__gallery">
        {% for image in product.images %}
          <li class="shop-item__gallery__item">
            <div class="shop-item__gallery__item__visual">
              <img class="shop-item__gallery__item__visual__img js-display-slider-img" src="{{ image.src | img_url: 'large' }}" alt="{{ image.alt | escape }}"/>
            </div>
          </li>
        {% endfor %}
      </ul>
      <input type="number" id="Quantity" name="quantity" value="1" min="1">
      <div class="product-variants infiniteoptions">
        <ul>
        {% for variant in product.variants %}
      	  <li class="{% cycle 'odds': 'odd', 'even' %}">
      		  {% if variant.available %}<input type="radio" name="id" value="{{ variant.id }}" id="radio_{{ variant.id }}" {% if forloop.first %}checked="checked"{% endif %} />
      			  <label for="radio_{{ variant.id }}" class="radio">
      				  <strong>{{ variant.title | escape }}</strong> for <span class="bold-blue">{{ variant.price | money }}</span>
      				  {% if variant.price < variant.compare_at_price %}<del>{{ variant.compare_at_price | money }}</del>{% endif %}
      			  </label>
      		  {% else %}
      			  <input type="radio" name="id" value="{{ variant.id }}" id="radio_{{ variant.id }}" disabled="disabled" />
      			  <label for="radio_{{ variant.id }}" class="radio">
      				  <strong>{{ variant.title }}</strong> is temporarily unavailable
      			  </label>
      		  {% endif %}
      	  </li>
        {% endfor %}
        </ul>
      </div>
      <button class="cta" type="submit" name="add" id="AddToCart">Add to shopping cart</button>
    </div>
    <article class="shop-item__article">
      {{ product.description }}
    </article>
  </form>
</section>
